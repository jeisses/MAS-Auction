breed [goods good]

; --- A good's own variables ---
goods-own[good-type good-price amount]

to setup-goods
  let num-goods 10
	set all-goods ["wood"] ;can be expanded
    
	create-goods length all-goods
  [
    setxy 0 + min-pxcor + who * 1 max-pycor - 1
    set good-type item 0 all-goods
    if good-type = "wood"
    [
      set shape "tree"
    ]
    set good-price  1 + random (10)
    set label good-price
    set amount 10  
  ]
end